<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="../../public/css/background.css">
        <link rel="stylesheet" href="../../public/css/home.css">
        <title>Home | ✂️Snipr</title>
    </head>
    <body>
        <div class="container">
            <div class="row align-items-center justify-content-between pt-5 mb-5">
                <h1 id="logo">✂️Snipr</h1>
                <div class="row align-items-center">
                    <a href="/settings"><i id="settings-icon" class="fa-solid fa-gear mr-5 mt-3"></i></a>
                    <a href="/logout" class="btn btn-outline-primary ml-auto mt-3" id="logout-btn">Log out</a>
                </div>
            </div>
            <form action="/short-url" method="POST" class="my-4 form-inline">
                <label for="originalUrl" class="sr-only">Url</label>
                <input required placeholder="Url" type="url" name="originalUrl" id="originalUrl" class="form-control col mr-2">
                <button class="btn btn-success" type="submit">Shrink</button>
            </form>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="table-head">Full URL</th>
                        <th class="table-head">Short URL</th>
                        <th class="table-head">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.originalUrl %>" target="_blank" id="url"><%= shortUrl.originalUrl %></a></td>
                        <td><a href="/<%= shortUrl.shortUrl %>" target="_blank" id="url"><%= shortUrl.shortUrl %></a></td>
                        <td  id="url"><%= shortUrl.clicks %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>